{
    "name": "x-transfer",
    "version": "1.0.0",
    "description": "Offline file sharing between macOS and Windows",
    "main": "main.js",
    "homepage": "./",
    "scripts": {
        "start": "electron .",
        "electron": "electron .",
        "react-dev": "react-scripts start",
        "dev": "concurrently \"npm run react-dev\" \"wait-on http://localhost:3000 && electron .\"",
        "react-build": "react-scripts build",
        "build": "npm run react-build && electron-builder",
        "pack": "npm run react-build && electron-builder --dir",
        "dist": "npm run react-build && electron-builder",
        "postinstall": "electron-builder install-app-deps"
    },
    "dependencies": {
        "electron": "^38.1.0",
        "framer-motion": "^12.23.12",
        "lucide-react": "^0.544.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "^0.0.0"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "electron-builder": "^24.6.4",
        "wait-on": "^7.0.1"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
